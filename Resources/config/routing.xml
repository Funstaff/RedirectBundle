<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="funstaff_redirect_index" path="/redirect">
        <default key="_controller">FunstaffRedirectBundle:Redirect:index</default>
        <requirement key="methods">GET</requirement>
    </route>

    <route id="funstaff_redirect_add" path="/redirect/add">
        <default key="_controller">FunstaffRedirectBundle:Redirect:add</default>
        <requirement key="methods">GET|POST</requirement>
    </route>

    <route id="funstaff_redirect_edit" path="/redirect/edit/{id}">
        <default key="_controller">FunstaffRedirectBundle:Redirect:edit</default>
        <requirement key="methods">GET|PUT</requirement>
    </route>

    <route id="funstaff_redirect_delete" path="/redirect/delete/{id}">
        <default key="_controller">FunstaffRedirectBundle:Redirect:delete</default>
        <requirement key="methods">DELETE</requirement>
    </route>

</routes>
