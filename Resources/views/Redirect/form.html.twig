{% trans_default_domain 'Redirect' %}
<div class="uk-form-row">
    {{ form_label(form.source, 'field.source'|trans, {'label_attr': {'class': 'uk-form-label'}}) }}
    {% set sourceError = (form.source.vars.errors|length > 0) ? ' uk-form-danger' : '' %}
    {{ form_widget(form.source, {'attr': {'class': 'uk-form-width-large' ~ sourceError}}) }}
    <div class="uk-form-controls uk-form-controls-text uk-form-error">
        {{ form_errors(form.source) }}
    </div>
</div>
<div class="uk-form-row">
    {{ form_label(form.destination, 'field.destination'|trans, {'label_attr': {'class': 'uk-form-label'}}) }}
    {% set destinationError = (form.source.vars.errors|length > 0) ? ' uk-form-danger' : '' %}
    {{ form_widget(form.destination, {'attr': {'class': 'uk-form-width-large' ~ destinationError}}) }}
    <div class="uk-form-controls uk-form-controls-text uk-form-error">
        {{ form_errors(form.destination) }}
    </div>
</div>
<div class="uk-form-row">
    {{ form_label(form.statusCode, 'field.statusCode'|trans, {'label_attr': {'class': 'uk-form-label'}}) }}
    {{ form_widget(form.statusCode, {'attr': {'class': 'uk-form-width-large'}}) }}
</div>
<div class="uk-form-row">
    {{ form_label(form.enabled, 'field.enabled'|trans, {'label_attr': {'class': 'uk-form-label'}}) }}
    <div class="uk-form-controls-text">
        {{ form_widget(form.enabled, {'attr': {'class': 'uk-form-width-large'}}) }}
    </div>
</div>
